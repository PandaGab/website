---
const { size, url } = Astro.props;
---
<style lang="styl" define:vars={{ size }}>
  svg
    width: calc(var(--size) * 1px)
    height: calc(var(--size) * 1px)

  .dot 
    display: contents
    &:hover .tooltip-text
      visibility: visible
      opacity: 1

  .tooltip-text
      visibility: hidden
      width: 120px
      background-color: rgb(0, 0, 0)
      color: rgb(255, 255, 255)
      text-align: center
      border-radius: 20px
      padding: 5px 0
      bottom: -5px
      margin-left: -50px
      border: 2px double transparent
      background-image: linear-gradient(rgb(13, 14, 33), rgb(13, 14, 33)), radial-gradient(circle at left top, rgb(1, 110, 218), rgb(217, 0, 192))
      background-origin: border-box
      background-clip: padding-box, border-box
      /* Position the tooltip */
      position: absolute
      z-index: 1
      /* Fade in transition */
      opacity: 0
      transition: opacity 0.5s

      &:hover
        transition: all 0.3s ease
        visibility: visible

  @media (any-hover: none)
    svg
      visibility: hidden
    
    .tooltip-text
      visibility: visible
      width: 220px
      background-color: rgb(0, 0, 0)
      color: rgb(255, 255, 255)
      text-align: center
      border-radius: 40px
      padding: 5px 0
      bottom: -5px
      margin-left: -50px
      border: 2px double transparent
      background-image: linear-gradient(rgb(13, 14, 33), rgb(13, 14, 33)), radial-gradient(circle at left top, rgb(1, 110, 218), rgb(217, 0, 192))
      background-origin: border-box
      background-clip: padding-box, border-box
      /* Position the tooltip */
      position: absolute
      z-index: 1
      /* Fade in transition */
      opacity: 1
      transition: opacity 0.5s

    
</style>
<div class="dot">
    <!-- Draw the white dot -->
    <svg viewBox="0 0 100 100" xmlns="http://www.w3.org/2000/svg">
        <!-- <filter id="gaussianBlur">
            <feGaussianBlur in="SourceGraphic" stdDeviation="5"/>
        </filter> -->
        <circle cx="50" cy="50" r="10" fill="white" /> /* filter="url(#gaussianBlur)" */
    </svg>
    <a href={url}>
        <span class="tooltip-text">
            <slot />
        </span>
    </a>
</div>

